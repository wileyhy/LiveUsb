shopt -s expand_aliases
alias 'set'='set -; if alias echo > /dev/null 2>&1 then unalias echo; else alias echo=":"; fi; set '

: 'Define foo()'
foo(){
  set -x
  : bar
}


set -x

echo foo 

echo bar

set +x

echo baz

echo quux

