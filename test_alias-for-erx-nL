#!/bin/env -iS bash --norc -euvx

## Q: Will line numbers print correctly?

declare -n nL=LINENO

function er_x()
{
  local - fn_exit_code=$?
  : "$@"
  builtin exit "${fn_exit_code}"
}

shopt -s expand_aliases
alias alias_erx='er_x "line ${nL}"'

function foo()
{
  local -
  : 'Printed strings, ie, no aliases'
  (( $#                             == 1 )) && er_x "line ${nL}"
  : 'Using alias'
  (( $#                             == 2 )) && alias_erx
  echo count $#
}

#foo alias_n

foo alias_y alias_y


